<UserControl x:Class="SqlHelper.Views.UserControls.CopyableCodeTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlHelper.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid>
        <TextBox 
            x:Name="txtCode"
            Text="{Binding TextBoxContent, 
                RelativeSource={RelativeSource AncestorType=UserControl}, 
                Mode=TwoWay,
                UpdateSourceTrigger=PropertyChanged}"
            Padding="2"
            FontFamily="Consolas"
            FontSize="14"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            AcceptsReturn="True"
            AcceptsTab="True"
            TextChanged="txtCode_TextChanged"/>

        <Button 
            x:Name="btnCopy"
            Content="📋Copiar"
            Height="50"
            Width="150"
            FontFamily="Segoe UI Semibold"
            FontSize="24"
            ToolTip="Copiar para a área de transferência"
            Margin="10"
            Background="Transparent"
            BorderThickness="0"
            Opacity="0.2"
            Click="btnCopy_Click"
            MouseEnter="btnCopy_MouseEnter"/>
    </Grid>
</UserControl>
