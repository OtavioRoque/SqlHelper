<UserControl x:Class="SqlHelper.Views.UserControls.ImportOptionsRadioButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlHelper.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
            <!-- Essa última é só pra melhorar o alinhamento -->
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <RadioButton x:Name="rbClientes"
                     Grid.Column="0"
                     Content="Clientes"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <RadioButton x:Name="rbProdutos"
                     Grid.Column="1"
                     Content="Produtos"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <RadioButton x:Name="rbEntradas"
                     Grid.Column="2"
                     Content="Entradas"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <RadioButton x:Name="rbSaidas"
                     Grid.Column="3"
                     Content="Saídas"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <RadioButton x:Name="rbContasPagar"
                     Grid.Column="4"
                     Content="Contas a pagar"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <RadioButton x:Name="rbContasReceber"
                     Grid.Column="5"
                     Content="Contas a receber"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
    </Grid>
</UserControl>
